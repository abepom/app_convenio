{
	"expo": {
		"name": "Farmácia",
		"slug": "abepom_farmacia",
		"version": "1.3.19",
		"orientation": "portrait",
		"icon": "./assets/icon.png",
		"backgroundColor": "#F1F1F1",
		"splash": {
			"image": "./assets/splash.png",
			"resizeMode": "contain",
			"backgroundColor": "#f1f1f1"
		},
		"updates": {
			"fallbackToCacheTimeout": 0
		},
		"assetBundlePatterns": ["**/*"],

		"ios": {
			"bundleIdentifier": "br.org.abepom.farmacia",
			"buildNumber": "1.0.7",
			"backgroundColor": "#f1f1f1",
			"icon": "./assets/icon-ios.png",
			"supportsTablet": true,
			"splash": {
				"image": "./assets/splash.png",
				"backgroundColor": "#f1f1f1",
				"resizeMode": "contain"
			},
			"infoPlist": {
				"NSCameraUsageDescription": "A permissão da câmera é necessária para capturar a imagem de perfil do usuário.",
				"NSPhotoLibraryUsageDescription": "A permissão da galeria é necessária para acessar as imagens para o perfil do usuário."
			}
		},
		"notification": {
			"icon": "./assets/icon.png",
			"color": "#f1f1f1",
			"iosDisplayInForeground": true,
			"androidMode": "default",
			"androidCollapsedTitle": "ABEPOM"
		},
		"androidStatusBar": {
			"barStyle": "light-content",
			"backgroundColor": "#03254E",
			"hidden": false,
			"translucent": false
		},

		"android": {
			"permissions": [
				"CAMERA",
				"READ_EXTERNAL_STORAGE",
				"WRITE_EXTERNAL_STORAGE"
			],
			"adaptiveIcon": {
				"foregroundImage": "./assets/adaptive-icon.png",
				"backgroundColor": "#F1F1F1"
			},
			"googleServicesFile": "./google-services.json",
			"package": "br.org.abepom.farmacia",
			"versionCode": 41,
			"backgroundColor": "#f1f1f1",
			"useNextNotificationsApi": true
		},
		"web": {
			"favicon": "./assets/favicon.png"
		}
	}
}
